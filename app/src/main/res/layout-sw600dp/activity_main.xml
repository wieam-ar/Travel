<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <!-- Left Pane: Header + Flight List (1/2 width) -->
    <LinearLayout
        android:id="@+id/leftPane"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#5F4FD1">

        <!-- HEADER FRAME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/btnBackHeader"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Back"
                    android:padding="8dp"
                    android:src="@drawable/header_background"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/btnEditHeader"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="Edit"
                    android:padding="8dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@android:color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDateHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="20 December 2022"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDepartureCodeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEL"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/flightIconHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                      />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœˆ"
                        android:textColor="#FFA726"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                       />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvArrivalCodeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLR"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDepartureAirportHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delhi International Airport"
                    android:textColor="#E1BEE7"
                    android:textSize="11sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tvArrivalAirportHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bengaluru Airport India"
                    android:textColor="#E1BEE7"
                    android:textSize="11sp"
                    android:gravity="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDurationHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="04h 30m"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/passengerInfoHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPassengerCountHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="01 Adult"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- FLIGHT LIST BELOW HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <!-- Filters -->
            <HorizontalScrollView
                android:id="@+id/filterScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnHighToLow"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="8dp"
                        android:text="High to Low"
                        android:textAllCaps="false"

                        android:textSize="12sp"
                        app:strokeWidth="1dp" />

                    <Button
                        android:id="@+id/btnLowToHigh"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="8dp"
                        android:text="Low to High"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:strokeWidth="1dp" />

                    <Button
                        android:id="@+id/btnAirlineType"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="8dp"
                        android:text="Airlines Type"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:strokeWidth="1dp" />

                    <ImageButton
                        android:id="@+id/btnFilter"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@drawable/ic_filter"
                        android:contentDescription="Filter"
                        android:src="@drawable/ic_filter"
                        app:tint="@color/black" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Flight List - ONE TICKET PER LINE -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFlightList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="6"
                tools:listitem="@layout/card_item" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Pane: Ticket Details (1/2 width) - Initially empty -->
    <FrameLayout
        android:id="@+id/rightPane"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white">

        <!-- Empty state -->
        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Select a flight to view ticket details"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Ticket details will be inflated here -->
        <include
            android:id="@+id/ticketDetails"
            layout="@layout/activity_ticket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>